<h1><%= t('header.edit_profile') %></h1>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if devise_error_messages! != '' %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-user"></i></span>
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: t('user.email'), autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <i>(<%= t('text.skip_password_change') %>, 
      <%= t('text.password_requirement') %>)</i><br />
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, class: "form-control", placeholder: t('user.new_password'), autocomplete: "new-password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('user.confirm_password'), autocomplete: "new-password" %>
    </div>
  </div>
  <div class="form-group">
    <i>(<%= t('text.confirm_password_change') %>)</i><br />
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :current_password, class: "form-control", placeholder: t('user.password'), autocomplete: "current-password" %>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-lg"><%= t('button.update') %></button>
  </div>
<% end %>

<h3><%= t('header.cancel_account') %></h3>

<p><%= t('text.cancel_account_confirmation') %> <%= button_to t('button.cancel_account'), registration_path(resource_name), class: "btn btn-danger btn-lg", data: { confirm: t('are_you_sure') }, method: :delete %></p>

<%= link_to t('link.back'), :back %>
