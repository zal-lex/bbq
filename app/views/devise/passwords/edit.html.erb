<h2><%= t('header.change_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <% if devise_error_messages! != '' %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <i>(<%= t('text.password_requirement') %>)</i><br />
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, class: "form-control", placeholder: t('user.new_password'), autocomplete: "new-password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('user.confirm_password'), autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-lg"><%= t('button.change_password') %></button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
